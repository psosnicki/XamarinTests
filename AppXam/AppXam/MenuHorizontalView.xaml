<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppXam;assembly=AppXam"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="AppXam.MenuHorizontalView">
  <local:ExtendedListView ItemTemplateSelector="{StaticResource MenuItemTemplateSelector}" 
                          ItemsSource="{Binding MenuItems}" 
                          ItemTappedCommand="{Binding ItemSelectedCmd}" 
                          SelectedItem="{Binding CurrentSelectedItem}" 
                          VerticalOptions="FillAndExpand" 
                          HasUnevenRows="true"
                          BackgroundColor="Transparent">
    
  </local:ExtendedListView>
</ContentPage>
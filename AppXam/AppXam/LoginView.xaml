<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:XLabs.Forms.Controls;assembly=XLabs.Forms"
             x:Class="AppXam.LoginView">
  
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <StackLayout Orientation="Vertical">
    <controls:ExtendedEntry Font="Large" Placeholder="username"  HorizontalOptions="StartAndExpand" VerticalOptions="Center" />
    <controls:ExtendedEntry Font="Large" Placeholder="password"  HorizontalOptions="StartAndExpand" VerticalOptions="Center" />
    <controls:ExtendedEntry Font="Large" Placeholder="server"  HorizontalOptions="StartAndExpand" VerticalOptions="Center" />
    <controls:ImageButton Source="" Text="Log in" />
  </StackLayout>
</ContentPage>